@model IEnumerable<Desafio.Game.Web.ViewModel.JogoIndexViewModel>

@{
    ViewBag.Title = "Consulta de Jogos";
}
<div style="display:block; margin-top: 25px;">
    @if (Model.Count() > 0)
    {
        <table class="table table-striped table-hover">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Titulo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Genero)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Plataforma)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Fornecedor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Link)
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Titulo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Genero)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Plataforma)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fornecedor)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Link)
                    </td>
                    <td>
                        <div class="btn-group">
                            @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn-sm btn-success" }) |
                            @Html.ActionLink("Detalhes", "Details", new { id = item.Id }, new { @class = "btn-sm btn-warning" }) |
                            @Html.ActionLink("Deletar", "Delete", new { id = item.Id }, new { @class = "btn-sm btn-danger" })
                        </div>
                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <div class="alert alert-info">
            <strong>Informa</strong> Nenhum registro cadastrado.
        </div>
    }
    <p>
        @Html.ActionLink("Cadastrar", "Create", new { }, new { @class = "btn-sm btn-info" })
        @Html.ActionLink("Consulta de games", "Consulta", new { }, new { @class = "btn-sm btn-success" })
    </p>
</div>